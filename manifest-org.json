{
    "manifest_version": 3,
    "name": "Email OTP Autofill",
    "version": "1.0",
    "description": "Authenticate with Gmail and autofill OTPs from emails.",
    "permissions": [
      "identity",
      "storage",
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "oauth2": {
      "client_id": "process.env.GOOGLE_CLIENT_ID",
      "scopes": [
        "https://www.googleapis.com/auth/gmail.readonly"
      ]
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }